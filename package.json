{
	"name": "test-runner",
	"displayName": "Test Runner",
	"description": "Run tests the way I like it",
	"publisher": "joelpod",
	"repository": {
		"type": "git",
		"url": "https://github.com/ajoelp/vscode-test-runner.git"
	},
	"version": "1.0.9",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:test-runner.run",
		"onCommand:test-runner.runLast",
		"onCommand:test-runner.runHistory"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "test-runner.run",
				"title": "Run test file"
			},
			{
				"command": "test-runner.runLast",
				"title": "Rerun last test"
			},
			{
				"command": "test-runner.runHistory",
				"title": "Rerun test from history"
			}
		],
		"keybindings": [
			{
				"command": "test-runner.run",
				"key": "ctrl+r t"
			},
			{
				"command": "test-runner.runLast",
				"key": "ctrl+r r"
			},
			{
				"command": "test-runner.runHistory",
				"key": "ctrl+r h"
			}
		],
		"taskDefinitions": [
			{
				"type": "testrunner",
				"required": [
					"task"
				],
				"properties": {
					"task": {
						"type": "string",
						"description": "The task to execute"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src tests --ext ts",
		"watch": "tsc -watch -p ./",
		"test": "jest",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/jest": "^26.0.15",
		"@types/node": "^12.19.2",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"eslint-config-prettier": "^6.14.0",
		"eslint-plugin-prettier": "^3.1.4",
		"jest": "^26.6.1",
		"prettier": "^2.1.2",
		"ts-jest": "^26.4.3",
		"typescript": "^4.0.5",
		"vsce": "^1.81.1",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {}
}
